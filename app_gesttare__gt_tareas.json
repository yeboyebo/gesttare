{
    "querystring": {},
    "schema": {
        "gt_partictarea": {
            "rel": "idtarea",
            "querystring": {
                "p_l": 10,
                "p_c": 1,
                "o_1": "idusuario"
            }
        },
        "gt_comentarios": {
            "rel": "idtarea",
            "querystring": {
                "p_l": 10,
                "p_c": 1,
                "o_1": "-idcomentario"
            }
        }
    },
    "layout": {
        "groupBoxPadre": {
            "componente": "YBGroupBox",
            "className": "gbTareas gbTareasBox",
            "style": {},
            "layout": {
                "articuosForm": {
                    "prefix": "gt_tareas",
                    "componente": "YBForm",
                    "class": "claseGrid",
                    "submit": "update",
                    "label": "tareas",
                    "send": false,
                    "autoCommit": true,
                    "fields": {
                        "gb__titulo": {
                            "title": "",
                            "fields": {
                                "nombre": {}
                            }
                        },
                        "gb__body": {
                            "title": "",
                            "fields": {
                                "descripcion": {},
                                "codproyecto": {
                                    "combolimit": 1
                                },
                                "fechavencimiento": {},
                                "resuelta": {},
                                "codestado": {},
                                "idusuario": {
                                    "combolimit": 1
                                }
                            }
                        }
                    },
                    "exclude": {}
                },
                "separator2": {
                    "componente": "YBSeparator"
                },
                "groupBoxUsuarios": {
                    "componente": "YBGroupBox",
                    "className": "",
                    "layout": {
                        "participantesGrid": {
                            "label": "Participantes",
                            "icon": "group",
                            "componente": "YBGrid",
                            "prefix": "gt_partictarea",
                            "className": "claseGrid",
                            "hideheader": true,
                            "columns": [
                                {
                                    "tipo": "foreignfield",
                                    "listpos": "title",
                                    "key": "nombre"
                                },
                                {
                                    "tipo": "act",
                                    "key": "delete",
                                    "label": "Borrar Linea",
                                    "success": [
                                        {
                                            "slot": "refrescar"
                                        }
                                    ]
                                }
                            ],
                            "rowclick": "",
                            "accionesGrid": [
                                {
                                    "key": "actNuevoPartic",
                                    "label": "Nuevo",
                                    "success": [
                                        {
                                            "slot": "refrescar"
                                        }
                                    ]
                                }
                            ]
                        }
                    }
                },
                "separator3": {
                    "componente": "YBSeparator"
                },
                "groupBoxComentarios": {
                    "componente": "YBGroupBox",
                    "className": "",
                    "label": "Comentarios",
                    "icon": "chat",
                    "layout": {
                        "groupBoxNuevoComentario": {
                            "componente": "YBGroupBox",
                            "className": "gbform",
                            "layout": {
                                "field_adjunto": {
                                    "componente": "YBFileInput",
                                    "prefix": "otros",
                                    "className": "",
                                    "key": "adjunto",
                                    "label": "Comentar",
                                    "tipo": 1,
                                    "style": {
                                        "width": "100%"
                                    },
                                    "action": "uploadFile",
                                    "autoUpload": false,
                                    "fields": {
                                        "field_comentario": {
                                            "componente": "YBFieldDB",
                                            "prefix": "otros",
                                            "className": "",
                                            "key": "comentario",
                                            "label": "Escribe un comentario ...",
                                            "tipo": 6,
                                            "style": {
                                                "width": "100%"
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "comentariosGrid": {
                            "componente": "YBList",
                            "prefix": "gt_comentarios",
                            "className": "claseGrid gbTareasBox",
                            "avatar": false,
                            "columns": [
                                {
                                    "tipo": "field",
                                    "listpos": "title",
                                    "key": "idusuario",
                                    "width": 100
                                },
                                {
                                    "tipo": "foreignfield",
                                    "key": "adjunto",
                                    "width": 100,
                                    "file": true,
                                    "listpos": "body"
                                },
                                {
                                    "tipo": "field",
                                    "listpos": "secondaryitem",
                                    "key": "fecha",
                                    "width": 100
                                },
                                {
                                    "tipo": "field",
                                    "listpos": "subtitle",
                                    "key": "comentario",
                                    "flex": 5
                                },
                                {
                                    "tipo": "act",
                                    "key": "delete",
                                    "label": "Borrar Linea",
                                    "success": [
                                        {
                                            "slot": "refrescar"
                                        }
                                    ]
                                }
                            ],
                            "rowclick": ""
                        }
                    }
                }
            }
        }
    },
    "acciones": {
        "actNuevoComentario": {
            "label": "Nuevo comentario",
            "action": "legacy",
            "icon": "payment",
            "serverAction": "actNuevoComentario",
            "params": [
                {
                    "tipo": 3,
                    "verbose_name": "comentario",
                    "key": "comentario",
                    "validaciones": null
                }
            ]
        },
        "actNuevoPartic": {
            "label": "Nuevo comentario",
            "action": "legacy",
            "prefix": "gt_tareas",
            "icon": "payment",
            "serverAction": "actNuevoPartic"
        },
        "delete": {
            "action": "deleteRow",
            "icon": "delete"
        },
        "nuevaLinea": {
            "action": "newRow",
            "icon": "add_circle"
        },
        "nuevaLineaParams": {

        }
    }
}
