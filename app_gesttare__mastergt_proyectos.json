{
    "querystring": {
        "p_l": 50,
        "p_c": true,
        "f_proyectosusuario": null,
        "s_archivado__exact": false,
        "o_1": "fechaterminado",
        "o_2": "nombre"
    },
    "schema": {
        "proyectosarchivados": {
            "query": {
                "p_l": 25
            }
        }
    },
    "layout": {
        "masterProyectos": {
            "componente": "YBGrid",
            "prefix": "gt_proyectos",
