{
    "querystring": {
        "p_l": 50,
        "p_c": true,
        "o_1": "-idtarea",
        "s_resuelta__exact": false
    },
    "schema": {
        "gt_tareas":{
            "customfilter": true
        }
    },
    "layout": {
        "groupBoxPadre": {
            "componente": "YBGroupBox",
            "className": "",
            "style": { },
            "layout": {
                "masterTareas": {
                    "componente": "YBTable",
                    "prefix": "gt_tareas",
                    "cansavefilter": true,
                    "filter": {
                        "codproyecto": null,
                        "codestado": null,
                        "idusuario": null,
                        "fechavencimiento":  {
                            "filterType": "interval"
                        },
                        "resuelta": null
                    },
                    "columns": [
                        {"tipo": "field", "listpos": "subtitle", "key": "nombre", "width": 350, "link": true},
                        {"tipo": "field", "listpos": "subtitle", "key": "idusuario", "width": 30},
                        {"tipo": "foreignfield", "listpos": "secondaryitem", "key": "Proyecto", "width": 90},
                        {"tipo": "field", "listpos": "title", "key": "fechavencimiento", "width": 80},
                        {"tipo": "field", "listpos": "body", "key": "codestado", "width": 100},
                        {
                            "tipo": "act",
                            "key": "complete",
                            "label": "Completar tarea",
                            "success": [
                                {"slot": "refrescar"}
                            ]
                        },
                        {
                            "tipo": "act",
                            "key": "startstop",
                            "label": "TimeTracking",
                            "success": [
                                {"slot": "refrescar"}
                            ]
                        }
                    ],
                    "rowclick": ""
                }
            }
        },
        "newRecordTarea": {
            "componente": "YBNewRecord",
            "class": "info",
            "icon": "add"
        }
    },
    "acciones": {
        "startstop": {
            "action": "legacy",
            "prefix": "gt_tareas",
            "serverAction": "startstop",
            "icon": "alarm"
        },
        "complete": {
            "action": "legacy",
            "prefix": "gt_tareas",
            "serverAction": "completar_tarea",
            "icon": "check"
        }
    }
}
