{
    "querystring": {
        "p_l": 50,
        "p_c": true,
        "o_1": "-idtarea",
        "s_resuelta__exact": false,
        "f_proyectosusuario": null
    },
    "schema": {
        "gt_tareas":{
            "customfilter": true
        }
    },
    "layout": {
        "groupBoxPadre": {
            "componente": "YBGroupBox",
            "className": "",
            "style": {},
            "layout": {
                "masterTareas": {
                    "componente": "YBGrid",
                    "prefix": "gt_tareas",
                    "cansavefilter": true,
                    "filter": {
                        "nombre": null,
                        "codproyecto": {"function": "getProyectosUsuario"},
                        "codestado": null,
                        "idusuario": {
                                        "function": "getParticProyectosUsu"
                                     },
                        "fechavencimiento":  {
                            "filterType": "interval"
                        },
                        "fechaentrega": {
                            "filterType": "interval"
                        },
                        "resuelta": null
                    },
                    "columns": [
                        {
                            "tipo": "act",
                            "key": "complete",
                            "label": "Completar tarea",
                            "success": [
                                {"slot": "refrescar"}
                            ]
                        },
                        {
                            "tipo": "act",
                            "key": "startstop",
                            "label": "TimeTracking",
                            "success": [
                                {"slot": "refrescar"}
                            ]
                        },
                        {
                            "tipo": "act",
                            "key": "delete",
                            "label": "Borrar Linea",
                            "success": [
                                {"slot": "refrescar"}
                            ]
                        },
                        {"tipo": "field", "listpos": "title", "key": "nombre", "color": "Color nombre", "title": true, "width": 350, "link": true},
                        {"tipo": "foreignfield", "listpos": "subtitle", "key": "Responsable", "width": 30, "avatar": true},
                        {"tipo": "foreignfield", "listpos": "secondaryitem", "key": "Proyecto", "width": 90},
                        {"tipo": "field", "listpos": "secondaryitem", "key": "fechavencimiento", "color": "Color fecha", "width": 80},
                        {"tipo": "field", "key": "fechaentrega", "color": "Color fechaentrega", "width": 80},
                        {"tipo": "field", "listpos": "body", "key": "codestado", "width": 100}
                    ],
                    "rowclick": "",
                    "rowlistclick": "link",
                    "accionesGrid": [{
                        "key": "getReport",
                        "label": "Genera XLS",
                        "success": []
                    }]
                }
            }
        },
        "newRecordTarea": {
            "componente": "YBNewRecord",
            "class": "info",
            "icon": "add"
        }
    },
    "acciones": {
        "getReport": {
            "label" : "",
            "action": "onexport",
            "icon": "save"
        },
        "delete": {
            "action": "deleteRow",
            "icon": "delete",
            "msg": "Se eliminaran todos los comentarios y registros de tiempo"
        },
        "startstop": {
            "action": "legacy",
            "prefix": "gt_tareas",
            "serverAction": "startstop",
            "icon": "alarm"
        },
        "complete": {
            "action": "legacy",
            "prefix": "gt_tareas",
            "serverAction": "completar_tarea",
            "icon": "check"
        }
    }
}
