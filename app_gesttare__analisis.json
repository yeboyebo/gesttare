{
    "querystring": {},
    "schema": {
        "grafico": {
            "custom": "generaAnalisisGraphic"
        },
        "tareasMasTiempo": {
            "query": {
                "p_c": true,
                "p_l": 10
            }
        }
    },
    "layout": {
        "groupBoxPadre": {
            "componente": "YBGroupBox",
            "className": "gbTareas gbTareasBox",
            "style": {},
            "layout": {
                "groupBoxGraphic": {
                    "componente": "YBGroupBox",
                    "className": "",
                    "layout": {
                        "graphicSeparator": {
                            "componente": "YBSeparator"
                        },
                        "graficosAnalisis": {
                            "label": "Análisis",
                            "componente": "YBChart",
                            "filter": {
                                "idusuario": {
                                    "filterType": "custom",
                                    "tipo": 55,
                                    "tofield": "idusuario",
                                    "key": "idusuario",
                                    "desc": "usuario",
                                    "rel": "aqn_user",
                                    "showpk": false,
                                    "label": "Usuario",
                                    "function": "getParticCompaniaUsu"
                                },
                                "fecha": {
                                    "filterType": "custom",
                                    "tipo": 28,
                                    "key": "fecha",
                                    "label": "Fecha"
                                }
                            },
                            "d3": "pieChart",
                            "prefix": "grafico"
                        }
                    }
                },

                "separator": {
                    "componente": "YBSeparator"
                },
                "gridTareasMasTiempo": {
                    "componente": "YBGrid",
                    "type": "query",
                    "prefix": "tareasMasTiempo",
                    "autofilter": false,
                    "cansavefilter": false,
                    "paginacion": false,
                    "className": "",
                    "buscador": false,
                    "label": "Top 10 tareas con más tiempo invertido",
                    "filter": {
                         "idusuario": {
                                "filterType": "custom",
                                "tipo": 55,
                                "tofield": "idusuario",
                                "key": "idusuario",
                                "desc": "usuario",
                                "rel": "aqn_user",
                                "showpk": false,
                                "label": "Usuario",
                                "function": "getParticCompaniaUsu"
                            },
                            "fecha": {
                                "filterType": "custom",
                                "tipo": 28,
                                "key": "fecha",
                                "label": "Fecha"
                            }
                    },
                    "columns": [
                        {"tipo": "field", "listpos": "secondaryitem", "key": "tt.fecha", "label": "Fecha", "width": 80},
                        {"tipo": "field", "listpos": "body", "key": "a.usuario", "label": "Usuario", "width": 80},
                        {"tipo": "field", "listpos": "title", "key": "t.nombre", "label": "Tarea", "width": 400, "flex": 2, "title": true},
                        {"tipo": "field", "listpos": "body", "key": "p.nombre", "label": "Proyecto", "width": 330, "flex": 2, "title": true},
                        {"tipo": "field", "listpos": "subtitle", "key": "tt.totaltiempo", "label": "Total Tiempo", "width": 80}
                    ],
                    "rowclick": "gotoTarea"
                }


            }
        }
    },
    "acciones": {
        "getReport": {
            "label" : "",
            "action": "onexport",
            "icon": "save"
        },
        "gotoTarea": {
            "action": "goto",
            "prefix": "gt_tareas",
            "serverAction": "gototarea"
        }
    },
    "drawIf": {
        "graficosAnalisis": {
            "filter_idusuario": "drawif_idusuariofilter"
        },
        "gridTareasMasTiempo": {
            "filter_idusuario": "drawif_idusuariofilter"
        }
    }
}
