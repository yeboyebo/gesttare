{
    "querystring": {},
    "schema": {
        "grafico": {
            "custom": "generaAnalisisGraphic"
        },
        "tareasMasTiempo": {
            "query": {
                "p_c": true,
                "p_l": 10
            }
        }
    },
    "layout": {          
        "groupBoxGraphic": {
            "componente": "YBGroupBox",
            "className": "gbTareas gbTareasBox analisis",
            "layout": {
                "volverButton": {
                    "componente": "YBButton",
                    "title": "Volver",
                    "prefix": "gt_tareas",
                    "icon": "arrow_back",
                    "className": "floatLeft",
                    "buttonType": "icon",
                    "style": {
                        "marginTop": "25px",
                        "marginRight": "5px"
                    },
                    "action": {
                        "key": "acctionVolver",
                        "success": [{"slot": "return"}]
                    }
                },
                "graphicSeparator": {
                    "componente": "YBSeparator"
                },
                "graficosAnalisis": {
                    "label": "Informe individual",
                    "componente": "YBChart",
                    "filter": {
                        "idusuario": {
                            "filterType": "custom",
                            "tipo": 55,
                            "tofield": "idusuario",
                            "key": "idusuario",
                            "desc": "usuario",
                            "rel": "aqn_user",
                            "showpk": false,
                            "label": "Usuario",
                            "function": "getParticCompaniaUsu"
                        },
                        "fecha": {
                            "filterType": "custom",
                            "tipo": 28,
                            "key": "fecha",
                            "label": "Fecha"
                        }
                    },
                    "d3": "pieChart",
                    "prefix": "grafico"
                }
            }
        },
        "gridTareasMasTiempo": {
            "componente": "YBGrid",
            "type": "query",
            "prefix": "tareasMasTiempo",
            "autofilter": false,
            "cansavefilter": false,
            "paginacion": false,
            "visible": false,
            "className": "",
            "buscador": false,
            "label": "Top 10 tareas con m√°s tiempo invertido",
            "filter": {
                 "idusuario": {
                        "filterType": "custom",
                        "tipo": 55,
                        "tofield": "idusuario",
                        "key": "idusuario",
                        "desc": "usuario",
                        "rel": "aqn_user",
                        "showpk": false,
                        "label": "Usuario",
                        "function": "getParticCompaniaUsu"
                    },
                    "fecha": {
                        "filterType": "custom",
                        "tipo": 28,
                        "key": "fecha",
                        "label": "Fecha"
                    }
            },
            "columns": [
                {"tipo": "field", "listpos": "secondaryitem", "key": "tt.fecha", "label": "Fecha", "width": 80},
                {"tipo": "field", "listpos": "body", "key": "a.usuario", "label": "Usuario", "width": 80},
                {"tipo": "field", "listpos": "title", "key": "t.nombre", "label": "Tarea", "width": 200, "flex": 2, "title": true},
                {"tipo": "field", "listpos": "body", "key": "p.nombre", "label": "Proyecto", "width": 130, "flex": 2, "title": true},
                {"tipo": "field", "listpos": "subtitle", "key": "tt.totaltiempo", "label": "Total Tiempo", "width": 80}
            ],
            "rowclick": "gotoTarea"
        }
    },
    "acciones": {
        "acctionVolver": {
            "action": "return"
        },
        "getReport": {
            "label" : "",
            "action": "onexport",
            "icon": "save"
        },
        "gotoTarea": {
            "action": "goto",
            "prefix": "gt_tareas",
            "serverAction": "gototarea"
        }
    },
    "drawIf": {
        "graficosAnalisis": {
            "filter_idusuario": "drawif_idusuariofilter"
        },
        "gridTareasMasTiempo": {
            "filter_idusuario": "drawif_idusuariofilter"
        }
    }
}
