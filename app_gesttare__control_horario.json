{
    "querystring": {
        "p_l": 0
    },
    "schema": {
        "gt_controldiario": {
            "querystring": {
                "p_l": 25,
                "o_1": "-fecha",
                "o_2": "idusuario",
                "f_regusuario": null
            }
        },
        "gt_controlmensual": {
            "querystring": {
                "p_l": 25,
                "o_1": "-anyo",
                "o_2": "-mes",
                "o_3": "idusuario",
                "f_regusuario": null
            }
        },
        "control_diario": {
            "query": {
                "p_l": 25
            }
        }
    },
    "layout": {
        "botonera": {
            "componente": "YBGroupBox",
            "className": "actionGB",
            "style": {"zIndex": 3, "position": "relative"},
            "layout": {
                "vistamensual": {
                    "componente": "YBButton",
                    "prefix": "gt_controlhorario",
                    "label": "Control mensual",
                    "className": "floatRight",
                    "buttonType": "raised",
                    "action": {
                        "key": "vistamensual",
                        "success": [{"slot": "recargar"}]
                    }
                },
                "vistadiaria": {
                    "componente": "YBButton",
                    "prefix": "gt_controlhorario",
                    "label": "Control diario",
                    "className": "floatRight",
                    "buttonType": "raised",
                    "action": {
                        "key": "vistadiaria",
                        "success": [{"slot": "recargar"}]
                    }
                }
            }
        },
        "separator": {
            "componente": "YBSeparator"
        },
        "queryGridcontroldiario": {
            "componente": "YBGrid",
            "type": "query",
            "prefix": "control_diario",
            "buscador": false,
            "cansavefilter": true,
            "autofilter": false,
            "filter": {
                "gt_controldiario.idusuario": {
                    "showpk": false,
                    "function": "getParticProyectosUsu"
                },
                "gt_controldiario.fecha": {
                    "filterType": "interval"
                },
                "gt_controldiario.validado": null
            },
            "className": "",
            "columns": [
                {
                    "tipo": "act",
                    "key": "validar",
                    "label": "Validar d√≠a",
                    "success": [
                        {"slot": "refrescar"}
                    ]
                },
                {"tipo": "field", "listpos": "title", "key": "gt_controldiario.fecha", "label": "Fecha", "width": 10},
                {"tipo": "foreignfield", "listpos": "subtitle", "key": "aqn_user.usuario", "label": "Usuario", "width": 5},
                {"tipo": "field", "listpos": "body", "key": "gt_controldiario.horaentrada", "label": "H.Entrada", "width": 5},
                {"tipo": "field", "listpos": "body", "key": "gt_controldiario.horasalida", "label": "H.Salida", "width": 5},
                {"tipo": "field", "listpos": "secondaryitem", "key": "gt_controldiario.totaltiempostring", "label": "T.Tiempo", "width": 5},
                {"tipo": "field", "listpos": "body", "key": "gt_controldiario.horasextra", "label": "H.Extra", "width": 5},
                {"tipo": "field", "listpos": "body", "key": "gt_controldiario.validado", "label": "Validado", "width": 5, "avatar": true}
            ],
            "accionesGrid": [{
                "key": "nuevoTramoFecha",
                "label": "Nuevo",
                "success": [{ "slot": "goto"}]
            }],
            "rowclick": "gotoControlDiario"
        },
        "controlmensual": {
            "componente": "YBGrid",
            "prefix": "gt_controlmensual",
            "buscador": false,
            "cansavefilter": true,
            "filter": {
                "idusuario": {
                    "showpk": false,
                    "function": "getParticProyectosUsu"
                },
                "anyo": null,
                "mes": {
                    "filterType": "combo",
                    "optionlist": {
                        "Enero": "01",
                        "Febrero": "02",
                        "Marzo": "03",
                        "Abril": "04",
                        "Mayo": "05",
                        "Junio": "06",
                        "Julio": "07",
                        "Agosto": "08",
                        "Septiembre": "09",
                        "Octubre": "10",
                        "Noviembre": "11",
                        "Diciembre": "12"
                    }
                },
                "validado_user": null,
                "validado_admin": null
            },
            "className": "",
            "columns": [
                {"tipo": "foreignfield", "listpos": "title", "key": "mesanyo", "label": "Mes", "width": 10},
                {"tipo": "foreignfield", "listpos": "subtitle", "key": "usuario", "label": "Usuario", "width": 5},
                {"tipo": "field", "listpos": "secondaryitem", "key": "totaltiempostring", "label": "T.Tiempo", "width": 5},
                {"tipo": "field", "listpos": "body", "key": "horasextra", "label": "H.Extra", "width": 5},
                {"tipo": "field", "listpos": "body", "key": "validado_user", "width": 5},
                {"tipo": "field", "listpos": "body", "key": "validado_admin", "width": 5, "avatar": true}
            ],
            "rowclick": "link"
        }
    },
    "acciones": {
        "nuevoTramoFecha": {
            "action": "legacy",
            "prefix": "gt_controldiario",
            "serverAction": "gotoNuevoTramoFecha",
            "icon": "add_circle",
            "title": "Indica fecha",
            "params": [
                {
                    "tipo": 26,
                    "verbose_name": "Fecha",
                    "key": "fecha",
                    "validaciones": null
                }
            ]
        },
        "validar": {
            "action": "legacy",
            "prefix": "gt_controldiario",
            "serverAction": "validar_dia",
            "icon": "check"
        },
        "vistadiaria": {
            "action": "legacy",
            "serverAction": "set_estado_diario",
            "icon": "icon"
        },
        "vistamensual": {
            "action": "legacy",
            "serverAction": "set_estado_mensual",
            "icon": "icon"
        },
        "gotoControlDiario": {
            "action": "goto",
            "prefix": "gt_controldiario",
            "serverAction": "gotoControlDiario"
        }
    },
    "drawIf": {
        "parentGroupBox": {
            "queryGridcontroldiario": "drawif_controldiario",
            "controlmensual": "drawif_controlmensual"
        },
        "botonera": {
            "vistadiaria": "drawif_botondiario",
            "vistamensual": "drawif_botonmensual"
        },
        "controldiario": {
            "filter_idusuario": "drawif_idusuariofilter"
        },
        "controlmensual": {
            "filter_idusuario": "drawif_idusuariofilter"
        }
    }
}
